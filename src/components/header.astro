<style>
	header {
		max-width: min(100%);
	}

	nav {
		display: flex;
		align-content: center;
		justify-content: flex-start;
		margin: 2em 2em 2em 4em;
		gap: 1em;
		flex: 0 1 auto;
	}
	nav a {
		color: var(--black);
	}
	nav a:hover {
		font-family: "Roboto","sans-serif";
		font-size: 1.05em;
	}

	h2 {
		font-family: "Roboto Slab","serif";
		font-size: 1.25em;
		width: 250px;
		height: 25px;
	}

	.internal-links{
		font-family: "Roboto Slab","serif";
		font-size: 1.25em;
		display: flex;
		align-content: center;
		justify-content: left;
		gap: 2em;
		padding: 0.025em 0.0em 0em 0em;
		height: 50px;
		width: 75%;
	}

	.social-links {
		display: none;
		align-content: center;
		justify-content: left;
		gap: 3em;
		padding: 0.3em 0em 0em 0em;
		visibility: visible;
	}

	.social-links-alt {
		font-family: "Roboto Slab","serif";
		font-size: 1.25em;
		display: flex;
		align-content: center;
		justify-content: left;
		gap: 2em;
		padding: 0.025em 0.0em 0em 0em;
		height: 50px;
	}

	.social-links-alt a {
		width: 80px;
	}
</style>